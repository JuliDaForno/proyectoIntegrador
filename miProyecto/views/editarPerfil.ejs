<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %>

<body>
    <% if (locals.user != undefined) { %>
        <%- include('./partials/headerLogueado') %>
    <% } else { %>
        <%- include('./partials/header') %>
    <% } %>

    <main>
        <section class="center main-content">
        <h1>Editar perfil</h1>
        <form action="/users/update/<%= usuario_id %>"  method="post" enctype="multipart/form-data">
            <% if (locals.errors) { %>
                <p class="error"  style="color:red"><%= locals.errors.message %> </p>
              <% } %>
            <div>
                <label for="email">E-mail</label>
                <input type="email" name="email" >
            </div>
            <div>
                <label for="username">username</label>
                <input type="text" name="username"  >
            </div>
            <div>
                <label for="password">Contraseña</label>
                <input type="password" name="password">
            </div>
            <div>
                <label for="foto">Foto de perfil</label>
                <input type="file" name="foto">
            </div>
            <div>
                <label for="nombre"> Nombre</label>
                <input type="text" name="nombre" id="" placeholder="Coloca tu nombre">
            </div>            
            <div>
                <label for="nombre"> Apellido</label>
                <input type="text" name="apellido" id="" placeholder="Coloca tu apellido">
            </div>
            <div>
                <label for="fecha">Fecha de nacimiento</label>
                <input type="date" name="fecha" >
            </div>
            <div>
                <label for="DNI">DNI</label>
                <input type="text" name="dni" >
            </div>

            <button type="submit">Finalizar la edición</button>
        </form>
        
        </section>
    </main>

<%- include('./partials/footer')  %> 

</body>

</html>