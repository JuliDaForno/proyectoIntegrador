<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %>
<body>
    <% if (locals.user != undefined) { %>
        <%- include('./partials/headerLogueado') %>
    <% } else { %>
        <%- include('./partials/header') %>
    <% } %>


    <main>
        <section class="center main-content">
        <h1>Registrate!!</h1>
        <form action="/users/register" method="POST" enctype="multipart/form-data">
<% if (locals.errors) { %>
    <p><%= errors.message %> </p>
<% } %>
<div>
    <label for="nombre"> Nombre</label>
    <input type="text" name="nombre" id="" placeholder="Coloca tu nombre">
</div>
<div>
    <label for="nombre"> Apellido</label>
    <input type="text" name="apellido" id="" placeholder="Coloca tu apellido">
</div>
<div>
    <label for="usuario"> Usuario</label>
    <input type="text" name="usuario" id="" placeholder="Coloca tu usuario">
</div>
<div>
    <label for="email"> Email</label>
    <input type="email" name="email" id="" placeholder="Coloca tu mail">
</div>
<div>
    <label for="password"> Contrase√±a</label>
    <input type="password" name="password">
</div>
<div>
    <label for="fotoperfil"> Foto de perfil</label>
    <input type="file" name="fotoperfil" placeholder="Coloca tu foto">
</div>
<div>
    <label for="fecha"> Fecha de nacimiento</label>
    <input type="date" name="fecha" placeholder="Coloca tu fecha de nacimiento">
</div>
<div>
    <label for="dni">DNI</label>
    <input type="number" name="dni" placeholder="Coloca tu DNI">
</div>
<button type="submit">Registrate</button>

        </form>
        </section>
    </main>

    <%- include('./partials/footer') %> 

</body>

</html>