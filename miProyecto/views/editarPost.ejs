<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %>

<body>
    <% if (locals.nombre != undefined) { %>
        <%- include('./partials/headerLogueado') %>
    <% } else { %>
        <%- include('./partials/header') %>
    <% } %>


    <main>
        <section class="center main-content">
        <h1>Editar Post</h1>
       
        <form action="/posts/editar/<%= result.id %> " method="post" enctype="multipart/form-data">
            <div>
                <label for="imagen"> Imagen </label>
                <input type="file" name="imagen" value="<%= result.image_name %> ">
            </div>
            <div>
                <label for="post"> Texto</label>
                <input type="text" name="post"  value="<%= result.pie_post %> ">
            </div>
            
            <button type="submit">Editar</button>
            
                    </form>
        </section>
    </main>

    <%- include('./partials/footer') %> 

</body>

</html>