<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %>

<body>
    <% if (locals.user != undefined) { %>
        <%- include('./partials/headerLogueado') %>
    <% } else { %>
        <%- include('./partials/header') %>
    <% } %>

    <main>
        <section class="center main-content" class="form-login">
           
        <h1>Editar perfil</h1>
       
        <form action="/users/update/<%= usuario_id %>"  method="post" enctype="multipart/form-data">
            <% if (locals.errors) { %>
                <p class="error"  style="color:red"><%= locals.errors.message %> </p>
              <% } %>
            <div class="form-group"> 
                <label class="form-texto-arriba" for="email">E-mail</label>
                <input class="form-control" type="email" name="email" >
            </div>
            <div class="form-group">
                <label class="form-texto-arriba" for="username">username</label>
                <input class="form-control" type="text" name="username"  >
            </div>
            <div class="form-group">
                <label class="form-texto-arriba" for="password">Contraseña</label>
                <input class="form-control" type="password" name="password">
            </div>
            <div class="form-group">
                <label class="form-texto-arriba" for="foto">Foto de perfil</label>
                <input class="form-control" type="file" name="foto">
            </div>
            <div class="form-group">
                <label class="form-texto-arriba" for="nombre"> Nombre</label>
                <input class="form-control" type="text" name="nombre" id="" placeholder="Coloca tu nombre">
            </div>            
            <div class="form-group">
                <label class="form-texto-arriba" for="nombre"> Apellido</label>
                <input class="form-control" type="text" name="apellido" id="" placeholder="Coloca tu apellido">
            </div>
            <div class="form-group">
                <label class="form-texto-arriba" for="fecha">Fecha de nacimiento</label>
                <input class="form-control" type="date" name="fecha" >
            </div>
            <div class="form-group">
                <label class="form-texto-arriba" for="DNI">DNI</label>
                <input class="form-control" type="text" name="dni" >
            </div>

            <button type="submit">Finalizar la edición</button>
        </form>

        <article>
            <img class="foto-lily" src="/images/logo.png" alt="">
        </article>
        
        </section>
    </main>

<%- include('./partials/footer')  %> 

</body>

</html>